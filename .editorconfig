# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
ij_typescript_use_double_quotes = false
ij_html_space_inside_empty_tag = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
